<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>

            <solid android:color="#80FDFAEC" />
            <stroke
                android:width="2dip"
                android:color="@color/colorPrimary" />
            <corners android:radius="3dip" />
            <padding
                android:bottom="0dip"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>

            <solid android:color="#80FDFAEC" />
            <stroke
                android:width="1dip"
                android:color="@color/sunezumi" />
            <corners android:radius="3dip" />
            <padding
                android:bottom="0dip"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />
        </shape>
    </item>
</selector>