<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_sumi</item>
        <item name="android:editTextColor">@color/black_sumi</item>
    </style>

    <style name="item_nav">
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/noto_sans</item>
    </style>

    <style name="text_style">
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="score_style">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/jf_openhuninn_</item>
        <item name="android:textColor">@color/red_jinzamomi</item>
    </style>

    <style name="text_title_style">
        <item name="android:textSize">24dp</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/black_sumi</item>
    </style>

    <style name="toolbar_style" parent="AppTheme">
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textColor">@color/white_normal</item>
        <item name="android:textColorSecondary">@color/white_normal</item>
        <item name="android:colorControlNormal">@color/white_normal</item>
    </style>

</resources>
