<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.linda.gourmetdiary.stores.detail.StoreDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".stores.detail.StoreDetailFragment">

        <TextView
            android:id="@+id/store_title"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/store_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/store_detail_name"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.store.storeName}"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/store_title"
            app:layout_constraintBottom_toBottomOf="@+id/store_title"
            app:layout_constraintStart_toEndOf="@+id/store_title"
            tools:text="@string/store_name"/>

        <TextView
            android:id="@+id/branch_title"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/store_branch"
            app:layout_constraintTop_toBottomOf="@+id/store_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/store_branch_name"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.store.storeBranch}"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/branch_title"
            app:layout_constraintBottom_toBottomOf="@+id/branch_title"
            app:layout_constraintStart_toEndOf="@+id/branch_title"
            tools:text="@string/store_branch"/>

        <TextView
            android:id="@+id/store_phone"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/store_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_location" />

        <TextView
            android:id="@+id/store_min_order"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/store_min_order"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_time" />

        <TextView
            android:id="@+id/min_order_text"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{viewModel.store.storeMinOrder}"
            app:layout_constraintBottom_toBottomOf="@+id/store_min_order"
            app:layout_constraintStart_toEndOf="@+id/store_min_order"
            app:layout_constraintTop_toTopOf="@id/store_min_order"/>

        <TextView
            android:id="@+id/store_booking"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/store_booking"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_min_order" />

        <TextView
            android:id="@+id/booking_text"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/store_booking"
            app:layout_constraintStart_toEndOf="@+id/store_booking"
            app:layout_constraintTop_toTopOf="@id/store_booking"/>

        <TextView
            android:id="@+id/phone_text"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{viewModel.store.storePhone}"
            app:layout_constraintBottom_toBottomOf="@+id/store_phone"
            app:layout_constraintStart_toEndOf="@+id/store_phone"
            app:layout_constraintTop_toTopOf="@id/store_phone"/>

        <TextView
            android:id="@+id/store_time"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/store_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_phone" />

        <TextView
            android:id="@+id/time_text"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{viewModel.store.storeOpenTime}"
            app:layout_constraintBottom_toBottomOf="@+id/store_time"
            app:layout_constraintStart_toEndOf="@+id/store_time"
            app:layout_constraintTop_toTopOf="@id/store_time"/>

        <TextView
            android:id="@+id/store_location"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/store_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/branch_title" />

        <TextView
            android:id="@+id/location_text"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{viewModel.store.storeLocation}"
            app:layout_constraintStart_toEndOf="@id/store_location"
            app:layout_constraintTop_toTopOf="@id/store_location"
            app:layout_constraintBottom_toBottomOf="@+id/store_location"/>

        <TextView
            android:id="@+id/store_web"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/store_web"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_booking" />

        <TextView
            android:id="@+id/web_text"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{viewModel.store.storeHtml}"
            app:layout_constraintStart_toEndOf="@id/store_web"
            app:layout_constraintTop_toTopOf="@id/store_web"
            app:layout_constraintBottom_toBottomOf="@+id/store_web"/>

        <View
            android:id="@+id/divider_store"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="16dp"
            android:alpha="0.8"
            android:background="@color/sunezumi"
            app:layout_constraintTop_toBottomOf="@+id/web_text" />

        <TextView
            android:id="@+id/all_cost"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_cost"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_store" />

        <TextView
            android:id="@+id/cost_text"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{viewModel.allCost}"
            app:layout_constraintBottom_toBottomOf="@+id/all_cost"
            app:layout_constraintStart_toEndOf="@+id/all_cost"
            app:layout_constraintTop_toTopOf="@id/all_cost"/>

        <TextView
            android:id="@+id/dollar"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollar"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/cost_text"
            app:layout_constraintStart_toEndOf="@+id/cost_text"
            app:layout_constraintTop_toTopOf="@+id/cost_text" />

        <TextView
            android:id="@+id/visiting_count"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visiting_count"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/all_cost" />

        <TextView
            android:id="@+id/visiting_count_text"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{viewModel.vistitTimes}"
            app:layout_constraintBottom_toBottomOf="@+id/visiting_count"
            app:layout_constraintStart_toEndOf="@+id/visiting_count"
            app:layout_constraintTop_toTopOf="@id/visiting_count"/>

        <TextView
            android:id="@+id/times"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visiting_times"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/visiting_count_text"
            app:layout_constraintStart_toEndOf="@+id/visiting_count_text"
            app:layout_constraintTop_toTopOf="@+id/visiting_count_text" />

        <TextView
            android:id="@+id/food_history"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/food_history"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/visiting_count" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/food_order_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:diary="@{viewModel.history}"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@+id/food_history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>